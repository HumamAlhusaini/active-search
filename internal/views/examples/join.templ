package examples

import (
	"github.com/HumamAlhusaini/active-search/internal/model"
	"github.com/HumamAlhusaini/active-search/internal/views/components"
)

// example
templ JoinButtons() {
	@components.Join(
		[]templ.Component{
			joinItem("first"),
			joinItem("second"),
			joinItem("third"),
		},
	)
}

templ joinItem(label string) {
	<button class="btn btn-primary">{ label }</button>
}

// example
templ JoinInputs() {
	@components.Join(
		[]templ.Component{
			joinInput("first"),
			joinInput("second"),
			joinInput("third"),
		},
	)
}

templ joinInput(label string) {
	@components.Input(model.Input{Label: label, Class: "input-bordered"})
}
