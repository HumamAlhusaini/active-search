package examples

import (
	"github.com/HumamAlhusaini/active-search/internal/model"
	"github.com/HumamAlhusaini/active-search/internal/views/components"
)

// example
templ BasicTextInput() {
	<div class="max-w-xs mx-auto pt-4">
		@components.Input(
			model.Input{
				Label:       "Name",
				Name:        "name",
				Placeholder: "Your name...",
				Class:       "input-bordered",
			},
		)
	</div>
}

// example
templ PasswordInput() {
	<div class="max-w-xs mx-auto pt-4">
		@components.Input(
			model.Input{
				Label:       "Password",
				Name:        "password",
				Type:        "password",
				Placeholder: "Password...",
				Class:       "input-bordered",
			},
		)
	</div>
}

// example
templ EmailInput() {
	<div class="max-w-xs mx-auto pt-4">
		@components.Input(
			model.Input{
				Label:       "Email",
				Name:        "email",
				Type:        "email",
				Value:       "not@a.valid@email.com",
				Placeholder: "Email...",
				Err:         "Please provide a valid email",
				Class:       "input-bordered",
			},
		)
	</div>
}

// example
templ DisabledInput() {
	<div class="max-w-xs mx-auto pt-4">
		@components.Input(
			model.Input{
				Label:           "Name",
				Name:            "name",
				Disabled:        true,
				DisabledMessage: "This is disabled",
				Class:           "input-bordered",
			},
		)
	</div>
}
