package examples

import (
	"github.com/HumamAlhusaini/active-search/internal/model"
	"github.com/HumamAlhusaini/active-search/internal/views/components"
)

// example
/*
Label before checkbox.
*/

templ DefaultCheckbox() {
	<div class="mx-auto pt-4">
		@components.Checkbox(
			model.Checkbox{
				Before:  "Remember me",
				Name:    "remember_me",
				Checked: false,
			},
		)
	</div>
}

// example
/*
Label after checkbox.
*/

templ PrimaryCheckbox() {
	<div class="mx-auto pt-4">
		@components.Checkbox(
			model.Checkbox{
				After:   "Remember me",
				Name:    "remember_me",
				Checked: true,
				Class:   "checkbox-primary",
			},
		)
	</div>
}
